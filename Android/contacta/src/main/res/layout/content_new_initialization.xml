<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sur.ultra.contacta.NewInitializationActivity"
    tools:showIn="@layout/activity_new_initialization">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="10dp"
        android:background="@drawable/myrect"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#D7D7D7"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hemos_enviado_codigo"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+58(414)187.4979"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contacta_le_llamara_en"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:54"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:textSize="30sp"
                android:textColor="#FFF"
                />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingrese_el_codigo"
                android:id="@+id/textView8"
                android:layout_gravity="center_vertical"
                android:paddingBottom="15dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:inputType="textNoSuggestions" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aceptar"
                android:id="@+id/buttonAccept"
                android:layout_gravity="center_horizontal"
                android:onClick="newInitialization"
                android:padding="15dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"
                android:id="@+id/buttonCancel"
                android:layout_gravity="center_horizontal"
                android:onClick="newInitialization"
                android:padding="15dp"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
